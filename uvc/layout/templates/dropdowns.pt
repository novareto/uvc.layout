<div id="uvc-global-menu">
  <tal:entries tal:define="categories viewletmanager/get_categories"
	       tal:repeat="cat categories">
    <dl class="dropdown" 
        tal:define="num repeat/cat/number"
        tal:attributes="class python: 'dropdown ' +viewletmanager.getClass(num)"> 

      <dt> 
           <a href=""
              tal:attributes="href cat/url"
              tal:content="cat/title">
           </a>
      </dt>     
      <dd tal:condition="cat/dropdown">
	<ul>
	  <li tal:repeat="entry cat/entries">
	    <tal:entry content="structure entry/render" />
	  </li>
	</ul>
      </dd>
     </dl>
  </tal:entries>
</div>
