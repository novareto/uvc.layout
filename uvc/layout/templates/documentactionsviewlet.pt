<dl tal:condition="viewlet/menu/viewlets"
    tal:attributes="id viewlet/menu/id;
		    class viewlet/menu/menu_class;">
  <dd>
    <ul>
      <tal:tab repeat="action viewlet/menu/viewlets">
	<li tal:attributes="class python:action.__name__.replace('.', '-')">
	  <a href="" tal:attributes="href action/url;
				     alt action/title;">
	    <span tal:content="action/title" />
	  </a>
	</li>
	</tal:tab>
    </ul>
  </dd>
</dl>
